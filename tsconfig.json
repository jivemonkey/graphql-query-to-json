{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2018", "es2015", "es6", "es2015.promise", "dom"],
        "strict": false,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "types": ["node", "webdriverio"]
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules", "./dist", "prettier.config.js"]
}
